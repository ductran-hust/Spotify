<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ReusableFilledButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ReusableOutlinedButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="RoundedEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">#99FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">24dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ReusableImageButton" parent="Widget.Material3.MaterialTimePicker.ImageButton">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white_60</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/white_60</item>
        <item name="iconTint">@null</item>
    </style>

</resources>